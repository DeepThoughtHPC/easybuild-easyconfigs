easyblock = 'Conda'

name = 'IsoSeq3'
version = '3.3.0'

homepage = 'https://github.com/PacificBiosciences/IsoSeq'
description = """Scalable De Novo Isoform Discovery from
Single-Molecule PacBio Reads
"""

toolchain = SYSTEM

channels = ['bioconda']

requirements = '%(namelower)s=%(version)s'

sanity_check_commands = [('isoseq3', '-h')]
sanity_check_paths = {
    'files': ['bin/isoseq3'],
    'dirs': ['lib', 'include'],
}

moduleclass = 'bio'
